<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_open_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="open activity"/>

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textIsSelectable="true"
        android:text="hello world,hello bro, how are you today? fine thank you"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试扫描线"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <com.mashiro.uitest.sweep.TipsItemView
            android:id="@+id/tips_item_view"
            android:background="#2B000000"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"/>
        <Button
            android:id="@+id/btn_test_sweep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试扫描线"/>
        <Button
            android:id="@+id/btn_close_sweep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭扫描线"/>
    </LinearLayout>

</LinearLayout>